@model Moose_Manor.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<style>
	body {
	background: url("http://www.commentnation.com/hotlinks/charcoal_gray_hexagon_tile_background_seamless.jpg");
	}
</style>

<div class="login">

	<div class="fluid-container">

	<div class="page-header">
		<h1>Login <small>Admin only</small></h1>
	</div>

	<div class="col-md-4">
		<p>Username</p>
	</div>

	<div class="col-md-8">
		<div class="input-group">
			<span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
			<input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1">
		</div>
	</div>

	<div class="col-md-4">
		<p>Password</p>
	</div>

	<div class="col-md-8">
		<div class="input-group">
			<span class="input-group-addon" id="basic-addon2"><span class="glyphicon glyphicon-eye-close"></span></span>
			<input type="text" class="form-control" placeholder="" aria-describedby="basic-addon2">
		</div>
	</div>

	</div>

</div>